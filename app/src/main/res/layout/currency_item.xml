<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.RatesFragment">

    <data>

        <import type="androidx.core.content.ContextCompat" />

        <import type="ro.edi.util.UtilsKt" />

        <variable
            name="position"
            type="int" />

        <variable
            name="model"
            type="ro.edi.xbnr.ui.viewmodel.RatesViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/currency"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <!--android:onClick="@{() -> viewModel.onItemClick(position)}"-->

        <ImageView
            android:id="@+id/currency_flag"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:contentDescription="@{model.getCurrency(position).code}"
            app:src="@{model.getCurrencyIconRes(position)}"
            tools:src="@drawable/ic_flag_eur" />

        <ImageView
            android:id="@+id/currency_flag_checked"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_check"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/currency_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fira_sans_condensed_medium"
                android:includeFontPadding="false"
                android:text="@{model.getCurrencyDisplayCode(position)}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textColor="@{ContextCompat.getColor(context, model.getIsStarredColorRes(context, position, true))}"
                android:textSize="18sp"
                tools:text="USD" />

            <TextView
                android:id="@+id/currency_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fira_sans_condensed_regular"
                android:lines="1"
                android:text="@{model.getCurrencyNameRes(position)}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:textColor="@{ContextCompat.getColor(context, model.getIsStarredColorRes(context, position, false))}"
                tools:text="US Dollar" />
        </LinearLayout>

        <TextView
            android:id="@+id/currency_ron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/titilliumweb_regular"
            android:paddingStart="4dp"
            android:paddingTop="1sp"
            android:paddingEnd="4dp"
            android:text="@string/symbol_ron"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textColor="?android:attr/textColorSecondary" />

        <TextView
            android:id="@+id/currency_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/titilliumweb_semibold"
            android:text="@{String.format(`%.4f`, model.getCurrency(position).rate)}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textColor="@{ContextCompat.getColor(context, model.getTrendColorRes(position))}"
            android:textSize="18sp"
            tools:text="4.1235" />
    </LinearLayout>
</layout>